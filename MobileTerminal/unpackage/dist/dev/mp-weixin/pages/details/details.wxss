.detail-content {
  width: 90%;
  border-radius: 25px;
  min-height: 100px;
  background-color: white;
  text-align: center;
  padding: 5%;
}
.detail-content .detail-title {
    font-size: 20px;
    font-weight: 500;
}
.detail-content .detail-user {
    margin-top: 10px;
    display: block;
    font-size: 13px;
}
.detail-content .detail-content {
    margin-top: 20px;
    display: block;
    font-size: 15px;
}
.detail-content .divider {
    margin-top: 20px;
    border: 1px solid #E8E8E8;
    width: 100%;
    height: 0px;
}
.detail-content .uni-input {
    width: 100%;
    border: 1px solid #C0C0C0;
    border-radius: 15px;
}
